<com.example.dchetney.helloworld.ItemCreateView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_material_dark">
    <LinearLayout
        android:layout_width="800px"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:layout_marginLeft="100px">
        <TextView android:id="@+id/name_text"
            android:layout_width="300px"
            android:layout_height="100px"
            android:text="Item Name:"
            android:gravity="right"/>
        <EditText android:id="@+id/name_form"
            android:layout_width="500px"
            android:layout_height="100px"
            android:textSize="6pt"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="800px"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:layout_marginLeft="100px">
        <TextView android:id="@+id/description_text"
            android:layout_width="300px"
            android:layout_height="100px"
            android:gravity="right"
            android:text="Description:"/>
        <EditText android:id="@+id/description_form"
            android:layout_width="500px"
            android:layout_height="100px"
            android:textSize="6pt"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="850px"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:layout_marginLeft="50px">
        <TextView android:id="@+id/price_text"
            android:layout_width="350px"
            android:layout_height="100px"
            android:gravity="right"
            android:text="Starting Bid Price:"/>
        <EditText android:id="@+id/price_form"
            android:layout_width="500px"
            android:layout_height="100px"
            android:textSize="6pt"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="800px"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:layout_marginLeft="100px">
        <TextView android:id="@+id/start_text"
            android:layout_width="300px"
            android:layout_height="100px"
            android:gravity="right"
            android:text="Start Date:"/>
        <EditText android:id="@+id/start_form"
            android:layout_width="500px"
            android:layout_height="100px"
            android:textSize="6pt"
            android:hint="(mm/dd/yy)" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="800px"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:layout_marginLeft="100px">
        <TextView android:id="@+id/end_text"
            android:layout_width="300px"
            android:layout_height="100px"
            android:gravity="right"
            android:text="Closing Date:"/>
        <EditText android:id="@+id/end_form"
            android:layout_width="500px"
            android:layout_height="100px"
            android:textSize="6pt"
            android:hint="(mm/dd/yy)"/>
    </LinearLayout>

    <Button android:id="@+id/create"
        android:layout_width="300px"
        android:layout_height="250px"
        android:layout_marginLeft="400px"
        android:text="Create"/>
    <TextView android:id="@+id/error"
        android:layout_width="500px"
        android:layout_height="300px"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#FF5555"/>

</com.example.dchetney.helloworld.ItemCreateView>